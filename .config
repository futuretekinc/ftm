CONFIG_PLATFORM=ftm-50s
CONFIG_MODEL=ftm-50s-lgu+
#CONFIG_MODEL=ftm-50s-wired
CONFIG_CROSS_COMPILE=armv5-linux-
CONFIG_HOST=arm-linux

# Common Libraries
CONFIG_GMP=y
CONFIG_PCRE=y
CONFIG_LIBUBOX=y
CONFIG_LIBPCAP=y
CONFIG_QDECODER=y
CONFIG_LIBCONFIG=y
CONFIG_SQLITE=y
CONFIG_ZLIB=y
CONFIG_MXML=y
CONFIG_CJSON=y
CONFIG_CURL=n

# Base Sytem
CONFIG_BASE=y
CONFIG_BUSYBOX=y
CONFIG_CRON=y
CONFIG_GPIO=y

# Network Aplications
CONFIG_NETWORK=y
CONFIG_OPENSSL=y
CONFIG_OPENSSH=y
CONFIG_IPTABLES=y
CONFIG_STRONGSWAN=y
CONFIG_HOTPLUG2=y
CONFIG_NTPCLIENT=y
CONFIG_NTPD=n
CONFIG_DROPBEAR=y
CONFIG_NET_SNMP=y
CONFIG_MOSQUITTO=y
CONFIG_UDHCPD=y
CONFIG_BIND=y
CONFIG_FTPD=n
CONFIG_FUTURESYSTEM_SSLVPN=y

# Web Administrator
CONFIG_LIGHTTPD=y
CONFIG_WEBADMIN=y

# Wifi Supported
CONFIG_WIRELESS_TOOLS=n
CONFIG_WIFI=n
CONFIG_AP=n

# Utilities
CONFIG_TCPDUMP=y
CONFIG_LUA=y
CONFIG_UCI=y

CONFIG_WIRED=y

# Daliworks Thingplus-Gateway
CONFIG_NODE=n
CONFIG_TPGW=n

# LG U+
CONFIG_LGUPLUS=y

